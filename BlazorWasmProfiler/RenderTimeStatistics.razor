@page "/rendertimestatistics"
@using BlazorWasmProfiler;

<style>
    /* Basic table styles */
    .table {
        border-collapse: collapse;
        border: 1px solid #ccc;
        font-size: 14px;
    }

        /* Header row styles */
        .table thead {
            background-color: #f2f2f2;
        }

        /* Table header cell styles */
        .table th {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }

        /* Table body row styles */
        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #ddd;
        }

        /* Table data cell styles */
        .table td {
            padding: 8px;
            border-bottom: 1px solid #ccc;
        }
</style>

<h3>Render Time Statistics</h3>

@if (renderStatistics != null && renderStatistics.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Caller</th>
                <th>Component</th>
                <th>Count</th>
                <th>Total Time (ms)</th>
                <th>Average Time (ms)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ExecutionStatistics executionStatistics in renderStatistics.Values.OrderByDescending(stat => stat.GetAverageTime()))
            {
                <tr>
                    <td>@executionStatistics.CallerMethodName</td>
                    <td>@executionStatistics.MethodName</td>
                    <td>@executionStatistics.Count</td>
                    <td>@executionStatistics.TotalTime.TotalMilliseconds</td>
                    <td>@executionStatistics.GetAverageTime().TotalMilliseconds</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No render time statistics available.</p>
}

@code {
    private IReadOnlyDictionary<string, ExecutionStatistics>? renderStatistics;

    protected override void OnInitialized()
    {
        renderStatistics = BlazorTimerAttribute.GetRenderStatistics();
    }
}